<!DOCTYPE html>
<html lang="en">
    <%- include('../cmmn-things/head.ejs') %>

<body>
    <div class="popup">
        <%- include('../cmmn-things/nav.ejs') %>
        <div class="container profcont">
            <div class="Profile">
                <div class="front">
                    <div class="image">
                        <% if (!thisuser.image.path){%>
                        <img src="/images/account.png" alt="profileimg">
                        <%}else{ %>
                        <img src="<%= thisuser.image.path.substring(1) %>" alt="profileimg">
                        <%}%>
                       
                    </div>
                    <span><%= thisuser.username%></span>
                    <div class="description" id="des" data-doc="<%= thisuser.description%>">
                        
                        <%= thisuser.description%>
                    
                    </div>
                    
                    
                </div>
                <!-- <div class="msg"><img src="/images/envelope.png" alt=""></div> -->
                <div class="Profileinfo">
                    <div class="profnav">
                        <ul>
                            <li class="active">General information</li>
                            <li>Portfolio</li>
                            <li>Reviews</li>
                            <li></li>
                        </ul>
                    </div>
                    <div class="profbody">
                        <div class="generalinfo el">
            
                            
                            <div class="registerged">                               
                                    <div class="job">
                                        <div>Full name </div>
                                    <div class="span2">
                                        <%= thisuser.info.lname%>
                                        <%= thisuser.info.fname%>
                                    </div>                                         
                                    </div>                                                                   
                                <div class="job">
                                    <div>Job  </div>
                                    <div class="span2"><%= thisuser.info.job%></div> 
                                </div>
                                <div class="job">
                                    <div>Wilaya  </div>
                                    <div class="span2"><%= thisuser.info.Wilaya%></div> 

                                </div>
                                <div class="job">
                                    <div>Phone number   </div>
                                    <div class="span2"><%= thisuser.info.phone%></div> 
                                </div>
                                <div class="job">
                                    <div>Full Adress   </div>
                                    <div class="span2"><%= thisuser.info.fulladress%></div> 
                                </div>
                              
                            </div>
                            
                        </div>
                        <div class="portfolio el" >
                            <%if(!thisuser.portfolio){%>
                               <h2 style="text-align: center;">There is  nothing to show in portfolio !!</h2>
                            <%}else{%>
                               
                                <!-- Container for the image gallery -->
                                   <div class="portcontainer">
                                       <!-- Full-width images with number text -->
                                       <% thisuser.portfolio.path.forEach(path=>{%>
                                       <div class="mySlides">                                     
                                           <img src="<%= path.substring(1)%>" style="width:100%">
                                       </div>
                                       <%})%>                                 
                                       <!-- Next and previous buttons -->
                                       <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                                       <a class="next" onclick="plusSlides(1)">&#10095;</a>
                                   
                                       <!-- Image text -->
                                       <div class="caption-container">
                                       <p id="caption"></p>
                                       </div>
                                   
                                       <!-- Thumbnail images -->
                                       <div class="row">
                                         
                                       <% for(let i =0; i< thisuser.portfolio.path.length ; i++ ){%>
                                       <div class="column" ">
                                           <img class="demo cursor num<%=i+1%>" data-doc="<%= i+1%>" src="<%=thisuser.portfolio.path[i]%>" style="width:100%" alt="<%=thisuser.portfolio.title[i]%>" >
                                       </div>
                                       <%}%>
                                       </div>
                                   </div> 
                               
                            <%}%>   
                       </div>
                        <div class="reviews el">
                            There are no reviews yet !!
                            <%if(user){%>
                                <div class="btn btn3">Add review</div>
                            <%}else{%>
                              <p><a href="/auth/log-in">Log in</a>  to add review</p>
                            <%}%>   
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <%- include('../cmmn-things/footer.ejs') %>
    </div>
    
    <script>
        const el = document.querySelectorAll('.el');
        const li = document.querySelectorAll('.profnav li');
        li[0].addEventListener('click', ()=>{
            changedisplay(0,1,2);
        });
        li[1].addEventListener('click', ()=>{
            changedisplay(1,2,0);
        });
        li[2].addEventListener('click', ()=>{
            changedisplay(2,1,0);
        });
        const changedisplay = (el0, el1, el2)=>{
            el[el0].style.display = "block";
            li[el0].classList.add('active');
            el[el1].style.display = "none";
            li[el1].classList.remove('active');
            el[el2].style.display = "none";
            li[el2].classList.remove('active');
        }
    </script>
    <script src="/navscript.js"></script>
    <script src="/protscript.js"></script>

</body>
</html>